{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true
  },
  "include": ["*.ts", "*.d.ts", "*.tsx", "*.vue", "svg-icon.d.ts", "vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
